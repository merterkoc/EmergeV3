                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shap_map"
                android:orientation="vertical">
            </LinearLayout>
            </FrameLayout>

        </LinearLayout>
        </FrameLayout>
    </LinearLayout>
