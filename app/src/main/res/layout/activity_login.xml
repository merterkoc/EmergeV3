<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.EmergeV3.Login"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/loginLayoutHead"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.7"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/loginLayoutHeadStart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_back"
                android:padding="40dp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/loginLayoutHeadEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_1"
                android:text="Login"
                android:fontFamily="@font/roboto_thin"
                android:textSize="76sp"
                android:textAlignment="textEnd"
                android:paddingRight="14dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/loginLayoutForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
            <TextView
                android:id="@+id/textFirstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MAIL"
                android:textColor="@color/color_1"
                android:textSize="20sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_thin"
                android:hint="Your mail"
                android:textColorHint="#828899"
                android:textSize="20sp"
                android:backgroundTint="@color/color_1"/>
            <TextView
                android:id="@+id/textEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="E MAIL"
                android:textColor="@color/color_1"
                android:textSize="20sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_thin"
                android:hint="Your password here"
                android:textColorHint="#828899"
                android:textSize="20sp"
                android:backgroundTint="@color/color_1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:text="Forgot password?"
            android:textAlignment="textEnd"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/loginLayoutButtons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:orientation="vertical">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Login"
            android:layout_gravity="center"
            android:background="@drawable/button"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="OR"
            android:layout_marginTop="16dp"
            android:textColor="@color/color_4"
            android:textSize="20sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/google_icon"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</LinearLayout>